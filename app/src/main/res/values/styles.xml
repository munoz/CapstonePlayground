<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#66CC66</item>
        <item name="colorPrimaryDark">#99FFCC</item>
        <item name="colorAccent">#66CCCC</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/determinate_circle</item>
    </style>

    <style name="CircularIndeterminateProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:progressDrawable">@drawable/indeterminate_circle</item>
    </style>

</resources>